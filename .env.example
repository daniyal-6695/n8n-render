# Computer Automation Agent Configuration

## Environment Variables

# Basic Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme

# n8n Configuration
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_EDITOR_BASE_URL=https://your-app-url.onrender.com

# Webhook URL
WEBHOOK_URL=https://your-app-url.onrender.com/

# Timezone
GENERIC_TIMEZONE=America/New_York

# Execution Mode
EXECUTIONS_MODE=regular
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# Workflow Settings
WORKFLOWS_DEFAULT_NAME=Computer Automation Workflow
N8N_DEFAULT_BINARY_DATA_MODE=filesystem

# Database (SQLite for simplicity, can be changed to PostgreSQL)
DB_TYPE=sqlite
DB_SQLITE_VACUUM_ON_STARTUP=true

# Security
N8N_SECURE_COOKIE=false

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Automation Agent Specific Settings
AUTOMATION_AGENT_ENABLED=true
AUTOMATION_BACKUP_ENABLED=true
AUTOMATION_BACKUP_SCHEDULE=daily
AUTOMATION_MONITORING_ENABLED=true
AUTOMATION_MONITORING_INTERVAL=5

# File Management
FILE_WATCH_DIRECTORY=/home/node/files/incoming
FILE_ORGANIZED_DIRECTORY=/home/node/files/organized
FILE_TEMP_DIRECTORY=/home/node/temp

# Data Processing
DATA_INPUT_DIRECTORY=/home/node/data/input
DATA_OUTPUT_DIRECTORY=/home/node/data/output
DATA_REPORTS_DIRECTORY=/home/node/data/reports

# Backup Settings
BACKUP_DIRECTORY=/home/node/backups
BACKUP_RETENTION_DAYS=7

# Logging and Alerts
LOG_DIRECTORY=/home/node/logs
ALERT_DIRECTORY=/home/node/logs/alerts

# System Monitoring Thresholds
MONITOR_CPU_THRESHOLD=80
MONITOR_MEMORY_THRESHOLD=85
MONITOR_DISK_THRESHOLD=90

# Email Configuration (optional)
# N8N_SMTP_HOST=smtp.gmail.com
# N8N_SMTP_PORT=587
# N8N_SMTP_USER=your-email@gmail.com
# N8N_SMTP_PASS=your-app-password
# N8N_SMTP_SENDER=your-email@gmail.com
# N8N_SMTP_SSL=false

# External Services (optional)
# Add your API keys and credentials here
# SLACK_WEBHOOK_URL=
# DISCORD_WEBHOOK_URL=
# TELEGRAM_BOT_TOKEN=
